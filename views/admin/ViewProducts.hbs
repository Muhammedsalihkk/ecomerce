<section>
  <div class="container">

    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Catogary</th>
          <th scope="col">Discription</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.catogary}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 50px;height:50px" src="{{this.image}}" alt=""></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="row  ">
      <a href="admin/add_product" class="btn btn-success ml-auto ">Add Product</a>
    </div>
  </div>

</section>